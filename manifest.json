{
  "manifest_version": 3,
  "name": "Google Drive Tree Navigator",
  "version": "1.0.0",
  "description": "A persistent left sidebar with a collapsible folder tree for Google Drive, allowing quick navigation and file management",
  "permissions": [
    "identity",
    "storage",
    "sidePanel"
  ],
  "host_permissions": [
    "https://www.googleapis.com/*",
    "https://docs.google.com/*",
    "https://drive.google.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "side_panel": {
    "default_path": "sidebar.html"
  },
  "action": {
    "default_title": "Open Google Drive Navigator"
  },
  "oauth2": {
    "client_id": "YOUR_CLIENT_ID.apps.googleusercontent.com",
    "scopes": [
      "https://www.googleapis.com/auth/drive",
      "https://www.googleapis.com/auth/drive.file",
      "https://www.googleapis.com/auth/drive.metadata.readonly"
    ]
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'"
  }
}
